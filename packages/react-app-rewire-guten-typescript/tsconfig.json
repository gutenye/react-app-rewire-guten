{
  "compilerOptions": {
    "outDir": "../../build",
    "jsx": "react",
    "sourceMap": true,
    "module": "esnext",
    "target": "es5",
    "downlevelIteration": true,
    "importHelpers": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "moduleResolution": "node",
    "baseUrl": "../..",
    "paths": {
      "*": [
        "src/*"
      ]
    },
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "plugins": [
      {
        "name": "typescript-styled-plugin"
      }
    ]
  },
  "include": [
    "../../src/**/*"
  ]
}
